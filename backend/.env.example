# Server Configuration
PORT=4000

# Database Configuration (MongoDB)
DATABASE_URL=mongodb+srv://<username>:<password>@cluster.mongodb.net/studynotion?retryWrites=true&w=majority

# JWT Secret (use a strong random string - generate with: openssl rand -base64 32)
JWT_SECRET=your_super_secret_jwt_key_here

# Cloudinary Configuration (for image/video uploads)
# Get from: https://cloudinary.com/console
CLOUD_NAME=your_cloudinary_cloud_name
API_KEY=your_cloudinary_api_key
API_SECRET=your_cloudinary_api_secret
FOLDER_NAME=edtechProject

# Email Configuration (for sending OTP emails)
# Use Gmail App Password: https://myaccount.google.com/apppasswords
MAIL_HOST=smtp.gmail.com
MAIL_USER=your_email@gmail.com
MAIL_PASS=your_gmail_app_password

# Razorpay Configuration (for payments - optional)
# Get from: https://dashboard.razorpay.com/app/keys
RAZORPAY_KEY=your_razorpay_key_id
RAZORPAY_SECRET=your_razorpay_secret

# Frontend URL for CORS
FRONTEND_URL=http://localhost:5173
